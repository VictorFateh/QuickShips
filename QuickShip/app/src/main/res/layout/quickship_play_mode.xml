<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/play_mode"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6fcdd6"
        android:orientation="vertical">

        <ViewFlipper
            android:id="@+id/play_mode_view_flipper"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <include
                layout="@layout/quickship_play_mode_opponent_grid_screen"/>

            <include
                layout="@layout/quickship_play_mode_player_grid_screen"/>
        </ViewFlipper>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6fcdd6"
            android:layout_weight="12"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.5"
                android:onClick="switchToChooseModeScreen"
                android:text="Choose Mode"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.5"
                android:onClick="switchToPlayModeGrid"
                android:text="@string/play_mode_button_1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>