<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/choose_mode"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/choose_mode_top_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/choose_mode_top"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/choose_mode_top_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/choose_mode_bottom"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:onClick="setRotation"
                        android:text="@string/choose_mode_rotate_btn"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:text="@string/choose_mode_place_ship_btn"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="@string/choose_mode_done_btn"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/choose_mode_bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/choose_mode_ship_box_border"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/choose_mode_choose_ship_title"
                            android:textAlignment="center"
                            android:textColor="@color/choose_mode_choose_ship_title"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <dev_t.cs161.quickship.quickShipChooseModeLinearLayout
                                    android:id="@+id/linear_layout_ship_size_2_parent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:tag="image_view_ship_size_2"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/image_view_ship_size_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:onClick="setChooseModeSelectedShip"/>
                                </dev_t.cs161.quickship.quickShipChooseModeLinearLayout>

                                <dev_t.cs161.quickship.quickShipChooseModeLinearLayout
                                    android:id="@+id/linear_layout_ship_size_4_parent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:tag="image_view_ship_size_4"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/image_view_ship_size_4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:onClick="setChooseModeSelectedShip"/>
                                </dev_t.cs161.quickship.quickShipChooseModeLinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <dev_t.cs161.quickship.quickShipChooseModeLinearLayout
                                    android:id="@+id/linear_layout_ship_size_3_a_parent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:tag="image_view_ship_size_3_a"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/image_view_ship_size_3_a"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:onClick="setChooseModeSelectedShip"/>
                                </dev_t.cs161.quickship.quickShipChooseModeLinearLayout>

                                <dev_t.cs161.quickship.quickShipChooseModeLinearLayout
                                    android:id="@+id/linear_layout_ship_size_3_b_parent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:tag="image_view_ship_size_3_b"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/image_view_ship_size_3_b"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:onClick="setChooseModeSelectedShip"/>
                                </dev_t.cs161.quickship.quickShipChooseModeLinearLayout>
                            </LinearLayout>

                            <dev_t.cs161.quickship.quickShipChooseModeLinearLayout
                                android:id="@+id/linear_layout_ship_size_5_parent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:tag="image_view_ship_size_5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/image_view_ship_size_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="false"
                                    android:onClick="setChooseModeSelectedShip"/>
                            </dev_t.cs161.quickship.quickShipChooseModeLinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <include
                            layout="@layout/quickship_chat_message_container"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/temp_ship_spot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ship_size5_horizontal"
        android:visibility="invisible"/>
</FrameLayout>